<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jeenius.MainWindow">
    <children>
        <VBox fx:id="mainContainer" spacing="10" prefWidth="400.0" prefHeight="600.0">
            <!-- Sort Button inside the VBox -->
            <Button fx:id="sortButton" text="Sort" onAction="#handleSortButtonClick" />

            <!-- ScrollPane for dialog messages -->
            <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" vvalue="1.0" prefHeight="500.0" prefWidth="400.0">
                <content>
                    <VBox fx:id="dialogContainer" prefHeight="500.0" prefWidth="388.0" />
                </content>
            </ScrollPane>

            <!-- User input and send button -->
            <HBox spacing="5">
                <TextField fx:id="userInput" onAction="#handleUserInput" prefHeight="41.0" prefWidth="324.0"
                           promptText="Click here to type something..." />
                <Button fx:id="sendButton" text="Send" onAction="#handleUserInput" prefHeight="41.0" prefWidth="76.0" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
